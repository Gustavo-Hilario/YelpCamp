<% include ../partials/header%>

<!-- All CAMPGROUNDS => -->
<div class="container" id="campground-index">
	<div class="row d-flex justify-content-between align-items-center mb-5">
		<div class="col-12 col-md-8">
			<h2 class="text-center">I have a space and would like to be a host...</h2>
		</div>
		<div class="col-12 col-md-4 text-center">
			<a href="/campgrounds/new" class="btn btn-success my-auto p-auto"> Add new Campground</a>
		</div>
	</div>
	<div class="row d-flex justify-content-center">
		<% campgrounds.forEach(function(campground){ %>
		<div class="col-lg-3 col-md-4 col-sm-6 pb-4 d-flex justify-content-center">
			<div class="card shadow " style="width: 18rem;">
				<a href="/campgrounds/<%= campground.id %>">
					<img src="<%= campground.image %>" class="campground-img card-img-top" alt="<%= campground.name %>">
				</a>
				<div class="card-body">
					<h5 class="card-title text-center"><strong><%= campground.name %></strong></h5>
					<p class="card-text">
						<% if(campground.description.length > 100){ %>
						<%= campground.description.substring(100, 0) + " ..." %>
						<%  } else { %>
						<%= campground.description %>
						<% } %>
					</p>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-sm">See more</a>
				</div>
			</div>
		</div>
		<% }); %>
	</div>
</div>

<!-- FOOTER => -->
<% include ../partials/footer%>