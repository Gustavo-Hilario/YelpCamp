<% include ./partials/header%>

<div class="row h-100">
	<div class="col-md-3 pl-5 border-right" id="myProfileCol">
		<h1>My Profile</h1>
		<div id="profileAccordion">
			<ul id="profileOption">
				<li id="editCamp">Edit Campgrounds</li>
			</ul>
		</div>
	</div>
	<div class="col-md-9 p-0" id="campgroundsCol">
		<div class="row d-flex justify-content-center m-2">
			<% campgrounds.forEach(function(campground){ %>
				<% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
					<div class="col-lg-4 col-sm-6 pb-4 d-flex justify-content-center">
						<div class="card" style="width: 18rem;">
							<a href="/campgrounds/<%= campground.id %>/">
								<img src="<%= campground.image %>" class="campground-img card-img-top" alt="<%= campground.name %>">
							</a>
							<div class="card-body">
								<h5 class="card-title text-center">
									<a href="/campgrounds/<%= campground.id %>/">
										<strong><%= campground.name %></strong>
									</a>
								</h5>
								<p class="card-text">
									<% if(campground.description.length > 100){ %>
											<%= campground.description.substring(100, 0) + " ..." %>
									<%  } else { %>
											<%= campground.description %>
										<% } %>
								</p>
								<div class="ownerButtons d-flex-inline float-right mb-2">
									<button class="editButton btn" >
										<a href="/campgrounds/<%= campground._id %>/edit">Edit</a>
									</button>
									<form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" class="d-inline" id="formDeleteCampID<%= campground._id %>">
										<button type="button" id="<%= campground._id %>" class="openerButton deleteButton btn" >Delete</button>
										<div class="dialog" id="dialog<%= campground._id %>" title="Delete Campground">
											<p>Are you sure that you want to delete this campground?</p>
										</div>	
									</form>
								</div>
							</div>
						</div>
					</div>
				<% }; %>

			<% }); %>	
		</div>
		
	</div>
</div>

<% include ./partials/footer%>
