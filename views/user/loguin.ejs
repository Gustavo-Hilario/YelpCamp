<% include ../partials/header %>
<div class="w-100 h-100 d-flex align-items-center justify-content-center">
	<div class="w-100 h-100" style="background-image: url(https://images.pexels.com/photos/747964/pexels-photo-747964.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);
		 background-repeat: no-repeat; background-size: cover; background-position: top;">
		<div class="h-100 d-flex align-items-center justify-content-center"
			style="background-color: rgba(255,255,255,0.2); background-size: cover;">
			<div class="bg-transparent rounded w-75">
				<h1 class="text-center">Login</h1>
				<div class="row w-75 d-flex flex-column align-items-center justify-content-center m-auto">
					<div>
						<form action="/loguin" method="POST">
							<div class="form-group">
								<label for="username">Username</label>
								<input class="form-control" id="username" type="text" name="username"
									placeholder="username" required>
							</div>
							<div class="form-group">
								<label for="password">Password</label>
								<input class="form-control" id="password" type="password" name="password"
									placeholder="password" required>
							</div>
							<div class="form-group">
								<button class="btn btn-lg btn-primary btn-block">Login</button>
							</div>
						</form>
					</div>

					<div>
						<a class="btn btn-sm btn-success mr-2 text-white" href="/register">Register</a>
						<a class="btn btn-sm btn-dark ml-2" href="javascript:history.go(-1)">Go Back</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>